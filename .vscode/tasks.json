{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "basestation: check maps",
            "type": "shell",
            "command": "ros2",
            "args": [
                "topic",
                "echo",
                "/core/feedback"
            ],
            "options": {
                "cwd": "/release/osm"
            },
            "group": "build"
        },
        {
            "label": "basestation: build interfaces",
            "type": "shell",
            "command": "/release/.devcontainer/bin/colcon-b1",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/backend/interfaces"
            },
            "group": {
                "kind": "build"
            },
        },
        {
            "label": "basestation: install backend",
            "type": "shell",
            "command": "poetry",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "basestation: build interfaces"
            ]
        },
        {
            "label": "basestation: run backend",
            "type": "shell",
            "command": "poetry",
            "args": [
                "run",
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "basestation: install backend"
            ]
        },
        {
            "label": "basestation: install wasm-pack",
            "type": "shell",
            "command" : "cargo install wasm-pack",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "basestation: build rust lib",
            "dependsOn" : [
            ],
            "type": "shell",
            "command" : "wasm-pack build",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend/src/components/arm-vis"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "basestation: install frontend",
            "type": "shell",
            "command": "bun",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "basestation: run frontend",
            "dependsOn": [
                "basestation: install frontend",
                "basestation: build rust lib"
            ],
            "type": "shell",
            "command": "bun",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "basestation: run all",
            "dependsOn": [
                "basestation: run backend",
                "basestation: run frontend",
                "basestation: check maps"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}