{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "basestation: build interfaces",
            "type": "shell",
            "command": "colcon",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend/interfaces"
            },
            "group": {
                "kind": "build"
            },
        },
        {
            "label": "basestation: install backend",
            "type": "shell",
            "command": "poetry",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "basestation: build interfaces"
            ]
        },
        {
            "label": "basestation: run backend",
            "type": "shell",
            "command": "poetry",
            "args": [
                "run",
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "basestation: install backend"
            ]
        },
        {
            "label": "basestation: install frontend",
            "type": "shell",
            "command": "bun",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "basestation: run frontend",
            "dependsOn": [
                "basestation: install frontend"
            ],
            "type": "shell",
            "command": "bun",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "basestation: run all",
            "dependsOn": [
                "basestation: run backend",
                "basestation: run frontend"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}